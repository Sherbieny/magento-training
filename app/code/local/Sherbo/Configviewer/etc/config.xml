<config>
    <modules>
        <Sherbo_configviewer>
            <version>0.1.0</version>
        </Sherbo_configviewer>
    </modules>
    <global>
        <events>
            <controller_front_init_routers>
                <observers>
                    <sherbo_configviewer_model_observer>
                        <type>singleton</type>                            
                        <class>Sherbo_Configviewer_Model_Observer</class>
                        <method>checkForConfigRequest</method>
                    </sherbo_configviewer_model_observer>
                </observers>
            </controller_front_init_routers>
        </events>
    </global>
</config>